# Azure App Service Environment Variables Template
# Copy these to Azure App Service → Configuration → Application Settings

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.azurewebsites.net,*.azurewebsites.net

# Database (your existing Azure MySQL)
DB_NAME=trainee_db
DB_USER=trainee_admin
DB_PASSWORD=your-database-password
DB_HOST=trainee-db-server.mysql.database.azure.com
DB_PORT=3306

# Optional: Django Settings Module
DJANGO_SETTINGS_MODULE=Trainee.settings_production
